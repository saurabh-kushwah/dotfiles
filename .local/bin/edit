#!/bin/bash

if [[ ${VSCODE_TERMINAL} == '' ]]; then
  nvim -p "$@"
  exit 0
fi

code --reuse-window "$@" 2> /dev/null

if [ $? -ne 0 ]; then
  for socket in ls -1t /run/user/$UID/vscode-ipc-*.sock; do
    VSCODE_IPC_HOOK_CLI=${socket} code --reuse-window "$@" 2> /dev/null
    if [ $? -eq 0 ]; then
      break
    fi
  done
fi
